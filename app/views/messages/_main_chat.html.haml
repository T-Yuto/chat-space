.maincontent
  .maincontent__header
    .maincontent__header__leftbox
      .maincontent__header__leftbox__box
        %h2.maincontent__header__leftbox__box__group-name  
          = @group.name
        %ul.maincontent__header__leftbox__box__group-member-list
          %p Member :
          %li.maincontent__header__leftbox__box__group-member-list__member
            -@group.users.each do |user|
              = user.name
    .maincontent__header__edit
      = link_to 'Edit', edit_group_path(@group.id), class: "edit-btn" 
          
  .maincontent__chatspace
    = render @messages
  .maincontent__form
    = form_for [@group, @message] do |f|
      = f.text_field :text, class: "message", placeholder: "type a message"
      .label
        = f.label :image, class: "label" do
          %icon.fas.fa-images
          = f.file_field :image, class: "file"
      = f.submit "Send", class: "send-btn"